@page
@model Client.Pages.LoginModel
@{
    ViewData["Title"] = "Inici de sessió";
}

<style>
    .login-container {
        max-width: 450px; 
        margin: 5rem auto; 
    }

    .login-card {
        border-radius: 15px; 
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1); 
        border: none; 
    }

        .login-card .card-header {
            background-color: #007bff; 
            color: white;
            text-align: center;
            border-top-left-radius: 15px;
            border-top-right-radius: 15px;
            padding: 1.5rem; 
        }

            .login-card .card-header h2 {
                margin-bottom: 0;
                font-weight: 300; 
            }

        .login-card .card-body {
            padding: 2rem; 
        }

    .form-floating label {
        padding-left: 0.5rem; 
    }

    .form-floating > .form-control {
        height: calc(3.5rem + 2px); /
        line-height: 1.25;
        padding-top: 1.625rem;
        padding-bottom: 0.625rem;
    }

    .form-floating > label {
        padding-top: 1rem;
        padding-bottom: 1rem;
    }

    .btn-login {
        padding: 0.75rem; 
        font-size: 1.1rem;
    }

    .register-link {
        margin-top: 1rem;
        font-size: 0.9rem;
    }
</style>

<div class="login-container">
    <div class="card login-card">
        <div class="card-header">
            <h2><i class="bi bi-box-arrow-in-right me-2"></i>@ViewData["Title"]</h2>
        </div>
        <div class="card-body">

            @if (!string.IsNullOrEmpty(Model.ErrorMessage))
            {
                <div class="alert alert-danger d-flex align-items-center" role="alert">
                    <i class="bi bi-exclamation-triangle-fill me-2"></i>
                    <div>
                        @Model.ErrorMessage
                    </div>
                </div>
            }

            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="form-floating mb-3">
                    <input asp-for="Login.Email" class="form-control" placeholder="Correu Electrònic" />
                    <label asp-for="Login.Email">Correu Electrònic</label>
                    <span asp-validation-for="Login.Email" class="text-danger small"></span>
                </div>

                <div class="form-floating mb-4">
                    <input asp-for="Login.Password" type="password" class="form-control" placeholder="Contrasenya" />
                    <label asp-for="Login.Password">Contrasenya</label>
                    <span asp-validation-for="Login.Password" class="text-danger small"></span>
                </div>

                <div class="d-grid">
                    <button type="submit" class="btn btn-primary btn-login">Entrar</button>
                </div>

            </form>

            <div class="text-center register-link">
                No tens compte? <a asp-page="/Register">Registra't aquí</a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}