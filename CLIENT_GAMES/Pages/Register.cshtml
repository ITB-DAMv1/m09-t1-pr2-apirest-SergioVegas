@page
@model CLIENT_GAMES.Pages.RegisterModel
@{
    ViewData["Title"] = "Creació d'Usuari";
}

<style>
    .register-container {
        max-width: 480px;
        margin: 4rem auto;
    }

    .register-card {
        border-radius: 15px;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
        border: none;
    }

        .register-card .card-header {
            background-color: #28a745; 
            color: white;
            text-align: center;
            border-top-left-radius: 15px;
            border-top-right-radius: 15px;
            padding: 1.5rem;
        }

            .register-card .card-header h2 {
                margin-bottom: 0;
                font-weight: 300;
            }

        .register-card .card-body {
            padding: 2rem;
        }

    .form-floating label {
        padding-left: 0.5rem;
    }

    .form-floating > .form-control {
        height: calc(3.5rem + 2px);
        line-height: 1.25;
        padding-top: 1.625rem;
        padding-bottom: 0.625rem;
    }

    .form-floating > label {
        padding-top: 1rem;
        padding-bottom: 1rem;
    }

    .btn-register {
        padding: 0.75rem;
        font-size: 1.1rem;
        background-color: #28a745; 
        border-color: #28a745;
    }

        .btn-register:hover {
            background-color: #218838;
            border-color: #1e7e34;
        }

    .login-link {
        margin-top: 1rem;
        font-size: 0.9rem;
    }

    .validation-summary-errors ul {
        padding-left: 1.2rem; /
        margin-bottom: 0;
    }
</style>

<div class="register-container">
    <div class="card register-card">
        <div class="card-header">
            <h2><i class="bi bi-person-plus-fill me-2"></i>@ViewData["Title"]</h2>
        </div>
        <div class="card-body">

            @if (!ViewData.ModelState.IsValid && ViewData.ModelState.ErrorCount > 0)
            {
                <div class="alert alert-danger mb-3">
                    <div class="d-flex align-items-center mb-1">
                        <i class="bi bi-exclamation-triangle-fill me-2"></i>
                        <strong>Error en el registre, revisa les dades:</strong>
                    </div>
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                </div>
            }

            <form method="post">

                <div class="form-floating mb-3">
                    <input asp-for="RegisterData.Name" class="form-control" placeholder="Nom" required />
                    <label asp-for="RegisterData.Name">Nom</label>
                    <span asp-validation-for="RegisterData.Name" class="text-danger small"></span>
                </div>

                <div class="form-floating mb-3">
                    <input asp-for="RegisterData.Email" type="email" class="form-control" placeholder="Correu Electrònic" required />
                    <label asp-for="RegisterData.Email">Correu Electrònic</label>
                    <span asp-validation-for="RegisterData.Email" class="text-danger small"></span>
                </div>

                <div class="form-floating mb-4">
                    <input asp-for="RegisterData.Password" type="password" class="form-control" placeholder="Contrasenya" required />
                    <label asp-for="RegisterData.Password">Contrasenya</label>
                    <span asp-validation-for="RegisterData.Password" class="text-danger small"></span>
                </div>

                <div class="d-grid">
                    <button type="submit" class="btn btn-register text-white">Registrar-se</button>
                </div>
            </form>

            <div class="text-center login-link">
                Ja tens un compte? <a asp-page="/Login">Inicia sessió aquí</a>
            </div>

        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}